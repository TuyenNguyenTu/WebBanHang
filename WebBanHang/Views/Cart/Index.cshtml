@model List<WebBanHang.Models.CartItem>
@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{

    <script src="/Assets/client/js/controller/cartController.js"></script>
}
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <td>Mã sản phẩm</td>
                <td>Tên sản phẩm</td>
                <td>Ảnh sản phẩm</td>
                <td style="text-align:center">Số lượng</td>
                <td>Đơn giá</td>
                <td>Thành tiền</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.ID</td>
                    <td>@item.Product.Name</td>
                    <td><img src="@item.Product.Image" width="100" /></td>
                    <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" style="color:black;" /></td>
                    <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                    <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                    <td><a href="#" class="bto-delete" data-id="@item.Product.ID">Xóa</a></td>
                </tr>
            }

        </tbody>
    </table>
    <div style="text-align:center">
        <button id="btoCountinue" class="btn">Tiếp tục mua sản phẩm</button>
        <button id="btoUpdate" class="btn">Cập nhật giỏ hàng</button>
        <button id="btoDeleteAll" class="btn">Xóa giỏ hàng</button>
        <button id="btoThanhToan" class="btn">Thanh toán</button>
    </div>

}
else
{
    <span class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
}


