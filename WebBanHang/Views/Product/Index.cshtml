                <input type="hidden" name="w3ls_item" value="@item.Name" />
                <input type="hidden" name="amount" value="@item.Price" />
                <button type="submit" class="w3ls-cart pw3ls-cart"><i class="fa fa-cart-plus" aria-hidden="true"></i> Thêm vào giỏ</button>
                 </form>*@
                    </div>
                    <br />
                    <div><a href="/them-gio-hang?productID=@item.ID&quantity=1" class="w3ls-cart"><i class="fa fa-cart-plus" aria-hidden="true"></i>Thêm giỏ hàng</a></div>
                </div>
            </div>
          
        </div>
        }



    </div>

</div>

