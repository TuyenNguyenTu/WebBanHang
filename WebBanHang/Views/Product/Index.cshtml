            <div class="col-md-3 product-grids">
                <div class="agile-products" style="width:255px; height:400px;">
                    <div class="new-tag"><h6>New</h6></div>
                    <a href="@url"><img src="@item.Image" class="img-responsive" alt="@item.Name" width="180" height="300"></a>
                    <div class="agile-product-text">
                        <h5><a href="single.html">@item.Name</a></h5>
                        <h6>@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")</h6>
