
@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model PagedList.IPagedList<Model.EntityF.Product>
@using PagedList.Mvc;
@section header{
    Trang danh sách sản phẩm
} <div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách nội dung
            </div>
            <div class="panel panel-body">
                @using (Html.BeginForm("Index", "Product", FormMethod.Get))
                {<div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-4">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" />
                            </div>
                            <br />
                            <div class="col-md-4">
                                <button type="submit">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }
                <br />

                <div class="table-responsive">
                    <div class="table table-striped table-bordered table-hover">
                        <table>
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Code</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Meta Title</th>
                                    <th>Mô tả</th>
                                    <th>Ảnh</th>
                                    <th>Giá</th>
                                    <th>Giá khuyến mãi</th>
                                    <th>Thuế VAT</th>
                                    <th>Số lượng</th>
                                    <th>Mã loại sản phẩm</th>
                                    <th>Chi tiết</th>
                                    <th>Bảo hành</th>
                                    <th>Ngày thêm</th>
                                    <th>Người thêm</th>
                                    <th>Ngày sửa</th>
                                    <th>Người sửa</th>
                                    <th>Meta keyword</th>
                                    <th>Meta decriptions</th>
                                    <th>Trạng thái</th>
                                    <th>Top Hot</th>
                                    <th>Lượt xem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.ID">
                                        <td>
                                            <a href="/Admin/Product/Edit/@item.ID">Sửa</a> &nbsp;&nbsp;&nbsp;&nbsp;
                                            @Ajax.ActionLink("Xóa","Delete",new { @id = item.ID},new AjaxOptions
                                            {
                                                Confirm = "Bạn có muốn xóa bản ghi này?",
                                                OnComplete = "$('#row_"+@item.ID+"').remove()",
                                                HttpMethod = "Delete"
                                            })
                                        </td>
                                        <td>@item.Code</td>
                                        <td>@item.Name</td>
                                        <td>@item.MetaTitle</td>
                                        <td>@item.Decription</td>
                                        <td>@item.Image</td>
                                        <td>@item.Price</td>
                                        <td>@item.PromotionPrice</td>
                                        <td>@item.IncludeVAT</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.CategoryID</td>
                                        <td>@item.Detail</td>
                                        <td>@item.Warranty</td>
                                        <td>@item.CreatedDate</td>
                                        <td>@item.CreatedBy</td>
                                        <td>@item.ModifiedDate</td>
                                        <td>@item.ModifiedBy</td>
                                        <td>@item.MetaKeyword</td>
                                        <td>@item.MetaDecriptions</td>
                                        <td>@item.Status</td>
                                        <td>@item.TopHot</td>
                                        <td>@item.ViewCount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString }))
                    </div>
                </div>

                <br />
            </div>
            @*  *@
        </div>
    </div>
</div>
  <div class="row">
      <div class="col-lg-1">
          <a class="dropdown-item" href="@Url.Action("Create","Product")">Tạo mới</a>
      </div>
  </div>