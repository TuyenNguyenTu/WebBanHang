@model Model.EntityF.About

@{
                /**/

                ViewBag.Title = "Tạo mới";
                Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Tạo mới About
}
@section jsFooter{
    <script>
        $(document).ready(function () {
            $('#btoSelectImg').on('click', function (e) {
                e.preventDefault();
                var finder = new CKFinder();
                finder.selectActionFunction = function (url) {
                    $('#txtImage').val(url);
                };
                finder.popup();
            })
        })
        var editor = CKEDITOR.replace('txtDecription', {
            customConfig: '/Assets/admin/js/demo/plugins/ckeditor/config.js',
        })
    </script>

}


